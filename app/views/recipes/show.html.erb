	<div class="container">
		<div class="page-wrapper4">
		  <div class="row">
				<div class="col-md-6">
					<div>
						<h3><%= @recipe.title %></h3>
						<%= link_to	(image_tag @recipe.image.url(:medium), class: "img-rounded",  size: '300x150') %>
					</div>
				</div>		
			<div class="col-md-6">
				<h3>Description</h3>
				<p><%= @recipe.description %></p>				
			</div>
		  </div>
		<div class="row">
			<div class="col-md-6">
				<div>
					<h3>INGREDIENTS</h3>
					<ul>
						<% @recipe.ingredients.each do |ingredient| %>
						<li><%= ingredient.name %></li>
						<% end %>
					</ul>
				</div>				
			</div>
			<div class="col-md-6">
				<h3>DIRECTIONS</h3>
				<ul>
					<% @recipe.directions.each do |direction| %>
					<li> <%= direction.step %> </li>
					<% end %>
				</ul>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<%= link_to "Back", root_path, class: "btn btn-default" %>
				<%= link_to "Edit", edit_recipe_path(@recipe), class: "btn btn-default" %>
				<%= link_to "Delete", recipe_path(@recipe), method: :delete, data: {confirm: "Are you sure?" },  
				class: "btn btn-default" %>
			</div>
		</div>
		</div>
		<div class="share-form">
			<div class="row">
				<div class="col-md-12">
					<h3>SHARE RECIPE</h3>
					<%= form_tag("/mail", method: :post) do %><br>
					<div>
						<label>Email from: 
							<%= text_field_tag(:email_from)%><br></label>			 	
						</div>
						<div>
							<label>Email to: <%= text_field_tag(:email_to)%></label><br>
						</div>

						<%= text_field_tag(:subject, @recipe.title) %>
						<%= hidden_field_tag :recipe_id , @recipe.id %>
						<%= submit_tag ("Email recipe"), class: "btn btn-default" %>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>







