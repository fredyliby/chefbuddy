<div class="container">
	<div class="row">
		<div class="col-md-offset-5 col-md-3">
			<h2 class="form-login">Log in</h2>
				<h4> WELCOME BACK</h4>
					<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  						<div class="form-inputs">
		    				<%= f.input :email, required: false, autofocus: true %><br>
		    				<%= f.input :password, required: false %><br>
		    				<%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %><br>  
						</div>

  					<div class="form-actions">
   						 <%= f.button :submit, "Log in" %><br>
  					</div>
					<% end %><br>
					<%= render "devise/shared/links" %>
		</div>
	</div>
</div>




